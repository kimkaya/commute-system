{
  "name": "commute-admin",
  "version": "1.0.0",
  "description": "출퇴근 관리자 프로그램",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "mongodb": "^7.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.commute.admin",
    "productName": "출퇴근관리자",
    "files": [
      "**/*",
      "node_modules/**/*",
      ".env"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "forceCodeSigning": false,
    "portable": {
      "artifactName": "출퇴근관리자.exe"
    }
  }
}
